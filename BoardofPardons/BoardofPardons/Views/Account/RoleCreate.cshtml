@model BoardofPardons.Entity.Role

@{
    ViewBag.Title = "RoleCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="col-lg-4 col-lg-offset-4">
        <div class="well">
            @Html.ActionLink("Roles", "RoleIndex", null, new { @class = "btn btn-info btn-sm" })
            @using (Html.BeginForm())
            { @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Create New Role</legend>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleName)
                    </div>
                    <div class="form-group m-t-10">
                        @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.RoleName)
                    </div>

                    <div class="row m-t-10">
                        <div class="col-lg-4 col-sm-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>


    </div>

</div>
