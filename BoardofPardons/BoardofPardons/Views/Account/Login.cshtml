@model BoardofPardons.Entity.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container well">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <fieldset>
                    <div class="form-group text-center">
                        <h4 class="form-signin-heading">Login</h4>
                    </div>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.username)
                        @Html.TextBoxFor(model => model.username,null, new { @class = "form-control inputBorder", placeholder = "Username", autofocus = "" })
                        
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.password)

                        @Html.PasswordFor(model => model.password, new { @class = "form-control inputBorder", placeholder = "Password" })
                        
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                    </div>
                    
                        <div class="text-danger text-center">
                            @Html.ValidationMessageFor(model => model.username)
                            @Html.ValidationMessageFor(model => model.password)
                        </div>
                    
                </fieldset>
            }
        </div>
    </div>
</div>



